<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			<br>
			<h1>Eat-A-Burger App</h1>
			<img src="assets/images/burger.png" HEIGHT="120" WIDTH="120" alt="Eat-A-Burger App">
			<p></p>
		</div>
	</div>
	<!-- end .row -->

	<div class="row">
		<div class="col-sm-6">

			<br>
			<h2>Burgers You Can Eat!</h2>

			<ul>
				{{#each burgers}} {{#unless this.devoured}}
				<li>
					{{this.id}} {{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="btn-primary" type="submit">Devour It!</button>
					</form>

				</li>
				{{/unless}} {{/each}}
			</ul>

		</div>
		<ul>

			<div class="col-sm-6">
				<br>
				<h2>Sorry, these burgers were already Eaten!</h2>

				{{#each burgers}} {{#if this.devoured}}
				<li>
					{{this.id}} {{this.burger_name}}

				</li>
				{{/if}} {{/each}}

			</div>

		</ul>


	</div>
	<!-- end .row -->

	<div class="row">
		<div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

				<div class="form-group">
					<p>Enter any burger you'd like to order and click the Submit Burger button.</p>
					<input type="text" id="ca" name="burger_name">
				</div>

				<button class="btn-primary" type="submit">Submit Burger</button>
			</form>

		</div>

	</div>
	<!-- end .row -->

</div>